<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemplateActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Selecione um novo template"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="702dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6">




        <ImageView
            android:id="@+id/template3"
            android:layout_width="match_parent"
            android:layout_height="238dp"
            android:onClick="enviarNovoTemplate"
            app:srcCompat="@drawable/chiquinha" />

        <ImageView
            android:id="@+id/template4"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:onClick="enviarNovoTemplate"
            app:srcCompat="@drawable/shrek" />

        <ImageView
            android:id="@+id/template5"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:onClick="enviarNovoTemplate"
            app:srcCompat="@drawable/simpson" />

        <ImageView
            android:id="@+id/template2"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:onClick="enviarNovoTemplate"
            app:srcCompat="@drawable/copo" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>